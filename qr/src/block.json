{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 3,
	"name": "vigo/qr",
	"version": "0.1.0",
	"title": "QR block",
	"category": "widgets",
	"icon": "smiley",
	"description": "Generate nice QR blocks for your website.",
	"example": {},
	"supports": {
		"html": false,
		"interactivity": true,
		"align": true
	},
	"attributes": {
		"align": {
			"type": "string",
			"default": "center"
		},
		"content": {
			"type": "string",
			"default": "https://vigo.wordcamp.org/2024/"
		},
		"size": {
			"type": "number",
			"default": 128
		},
		"mode": {
			"type": "string",
			"default": "static"
		}
	},
	"usesContext": [ "postType", "postId" ],
	"textdomain": "qr",
	"editorScript": "file:./index.js",
	"editorStyle": "file:./index.css",
	"style": "file:./style-index.css",
	"viewScript": "file:./view.js",
	"render": "file:./render.php"
}
